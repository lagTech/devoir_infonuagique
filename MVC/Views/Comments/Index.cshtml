@model IEnumerable<MVC.Models.Comment>

@{
    ViewData["Title"] = "Index";
    ViewData["PostId"] = ViewContext.RouteData.Values["id"];
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-PostId="@ViewData["PostId"]">Create New</a>
</p>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Commentaire)
                </td>

                <td>
                    <a asp-action="Like" asp-route-CommentId="@item.Id" asp-route-PostId="@item.PostId" input type="button" class="btn btn-outline-secondary d-inline-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5" />
                        </svg>
                        @item.Like.ToString()
                    </a>
                </td>
                <td>
                    <a asp-action="Dislike" asp-route-CommentId="@item.Id" asp-route-PostId="@item.PostId" input type="button" class="btn btn-outline-secondary d-inline-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1" />
                        </svg>
                        @item.Dislike.ToString()
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
            </tr>
        }
    </tbody>
</table>